---
import CertificatesGallery from "./ReactBits/CertificatesGallery";

// Define tus certificados aquí
const certificates = [
  { image: "/images/Certifications/cert1.webp", text: "Scaling Applications on AWS" },
  { image: "/images/Certifications/cert2.webp", text: "AWS NoSQL Databases" },
  { image: "/images/Certifications/cert3.webp", text: "AWS Cloud Computing" },
  { image: "/images/Certifications/cert4.webp", text: "UTA 2024 Conference" },
  { image: "/images/Certifications/cert5.webp", text: "Introduction to Python" },
  { image: "/images/Certifications/cert6.webp", text: "NestJS + Microservices" },
  { image: "/images/Certifications/cert7.webp", text: "Astro & Headless CMS" },
  { image: "/images/Certifications/cert8.webp", text: "GSAP from Scratch" },
  { image: "/images/Certifications/cert9.webp", text: "Python from Scratch" },
  { image: "/images/Certifications/cert10.webp", text: "English for Interviews" },
];
---

<section
  id="certificates"
  class="relative py-24 px-8 md:px-24 bg-linear-to-b from-black via-purple-950/10 to-black"
>
  <!-- Section Header -->
  <div class="max-w-6xl mx-auto">
    <span
      class="text-purple-400 font-mono text-sm tracking-wider uppercase mb-4 block"
    >
      Achievements
    </span>
    <h2 class="text-4xl md:text-6xl font-black text-white mb-4">
      Certificates
    </h2>
    <p class="text-white/50 max-w-xl">
      Professional certifications and achievements that validate my expertise.
    </p>
  </div>

  <!-- Gallery Container -->
  <div class="relative h-64 md:h-72">
    <CertificatesGallery
      client:visible
      items={certificates}
      bend={0}
      borderRadius={0.04}
      textColor="#ffffff"
      font="500 30px Inter"
      scrollSpeed={1.3}
      scrollEase={0.03}
    />
  </div>

  <!-- Instructions -->
  <div class="max-w-6xl mx-auto px-6 mt-8">
    <p class="text-white/30 text-sm text-center font-mono">
      Drag to navigate • Click to expand
    </p>
  </div>
</section>
